<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#2f333f">

   


           <LinearLayout
                 android:background="#d81b60"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="100dp">
               <com.vipul.hp_hp.timelineview.TimelineView
                   app:marker="@drawable/manwhite"
                   android:paddingStart="33dp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   app:marker_size="30dp"
                   app:line_size="1dp"
                   app:line="#ffff"/>
               <TextView
                   android:id="@+id/cse423"

                    android:textStyle="bold"
                   android:textColor="#ffff"
                   android:text="CSE-423"
                   android:textSize="20sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    />
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:textColor="#ffff"
                       android:text="10.30am"
                       android:textSize="20dp"
                       android:paddingLeft="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:textColor="#ffff"
                       android:text="11.55am"
                       android:textSize="20dp"
                       android:paddingLeft="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />


               </LinearLayout>
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:textColor="#ffff"
                       android:text="Faisal Imran"
                       android:textSize="20dp"
                       android:paddingLeft="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:textColor="#ffff"
                       android:text="Room-R1"
                       android:textSize="20dp"
                       android:paddingLeft="20dp"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content" />


               </LinearLayout>





           </LinearLayout>
           <LinearLayout
               android:background="#00c853"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
        <com.vipul.hp_hp.timelineview.TimelineView
            app:marker="@drawable/manwhite"
            android:paddingStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:marker_size="30dp"
            app:line_size="1dp"
            app:line="#ffff"/>
        <TextView
            android:id="@+id/cse426"
            android:textColor="#ffff"
            android:text="CSE-426"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#ffff"
                android:text="12.00pm"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#ffff"
                android:text="2.00pm"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#ffff"
                android:text="SN+DH"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#ffff"
                android:text="Room-Abacus"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_width="198dp"
                android:layout_height="wrap_content" />


        </LinearLayout>





    </LinearLayout>










  



   

   

</LinearLayout>